# Database Configuration Example
# Copy this file to .env and fill in your actual values

# Get your DATABASE_URL from Neon.tech dashboard
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL="postgresql://user:password@your-neon-host.neon.tech/dbname?sslmode=require"

# Alternative Neon URLs (if provided by Neon)
POSTGRES_URL=""
POSTGRES_PRISMA_URL=""
POSTGRES_URL_NO_SSL=""
POSTGRES_URL_NON_POOLING=""

# NextAuth Configuration (if using authentication)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# AI Configuration - Claude API (PRIMARY - Best Quality)
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# AI Configuration - Gemini API (Fallback)
GEMINI_API_KEY="your-gemini-api-key-here"

# AI Configuration - Groq API (Fallback)
GROQ_API_KEY="your-groq-api-key-here"

# Application Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NODE_ENV="production"

